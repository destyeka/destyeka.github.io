---
// src/components/ProjectCard.astro
interface Props {
  title: string;
  description: string;
  tech: string[];   // Example: ['React', 'Tailwind']
  image: string;    // Path to image in /public folder
  link?: string;    // Optional link to GitHub/Live
  reverse?: boolean; // If true, image goes to the right side
}

const { title, description, tech, image, link = "#", reverse = false } = Astro.props;
---

<article class={`flex flex-col md:flex-row gap-8 md:gap-12 items-center py-16 border-b border-gray-900 ${reverse ? 'md:flex-row-reverse' : ''}`}>
  
  <div class="w-full md:w-1/2">
    <a href={link} target="_blank" class="block group relative overflow-hidden rounded-xl border border-gray-800 bg-gray-900 aspect-video">
        <img 
            src={image} 
            alt={title} 
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" 
        />
        
        <div class="absolute inset-0 bg-blue-500/0 group-hover:bg-blue-500/10 transition-colors duration-300"></div>
    </a>
  </div>

  <div class="w-full md:w-1/2 space-y-5">
    
    <div class="space-y-2">
        <h3 class="text-3xl font-bold text-white tracking-tight">{title}</h3>
        <div class="flex flex-wrap gap-2">
        {tech.map((t) => (
            <span class="px-2.5 py-0.5 text-xs font-medium text-blue-300 bg-blue-500/10 rounded-full border border-blue-500/20">
            {t}
            </span>
        ))}
        </div>
    </div>

    <p class="text-gray-400 leading-relaxed text-lg">
      {description}
    </p>

    <div class="pt-2">
        <a href={link} class="inline-flex items-center gap-2 text-sm font-semibold text-white hover:text-blue-400 transition-colors group">
            View Project 
            <span class="transform group-hover:translate-x-1 transition-transform">â†’</span>
        </a>
    </div>
  </div>

</article>