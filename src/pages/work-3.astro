---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro"; // Use the Astro Navbar we made
import ProjectCard from "../components/ProjectCard.astro";
---

<Layout title="Desty E. Syawfitri - Portfolio">
    <Navbar />

    <main class="max-w-5xl mx-auto px-6 pt-2 pb-6">
        <section class="flex flex-col gap-2 items-start md:py-32">
            <section class="flex w-full justify-between">
                <div class="flex flex-col gap-2 items-start justify-end">
                    <a href="/">
                        <div class="flex gap-1">
                            <span class="font-bold text-xs text-black/25">
                                01
                            </span>
                            <span class="font-bold text-xs text-black/25">
                                Takarasa
                            </span>
                        </div>
                    </a>
                    <span
                        class="w-0 h-4 ml-1 outline outline-1 outline-offset-[-0.50px] outline-black/25"
                    ></span>
                </div>
                <div class="flex flex-col gap-2 items-start justify-end">
                    <a href="/work-2">
                        <div class="flex gap-1">
                            <span class="font-bold text-xs text-black/25">
                                02
                            </span>
                            <span class="font-bold text-xs text-black/25">
                                FitAble
                            </span>
                        </div>
                    </a>
                    <span
                        class="w-0 h-4 ml-1 outline outline-1 outline-offset-[-0.50px] outline-black/25"
                    ></span>
                </div>
                <div class="flex flex-col gap-2 items-start justify-end">
                    <span class="font-bold text-xl text-black"> 03 </span>
                    <span
                        class="w-0 h-4 ml-1 outline outline-1 outline-offset-[-0.50px] outline-black"
                    ></span>
                </div>
            </section>
            <h1 class="text-5xl md:text-7xl font-bold">Tiga Furnitur</h1>
            <div class="w-full flex justify-between items-center">
                <p class="text-xs font-bold text-black/25">
                    Slide picture to navigate.
                </p>
                <p class="text-xs font-bold text-black/25">1/3</p>
            </div>
            <article class="flex flex-col gap-2">
                <img src="/media/tigafurnitur.png" alt="" class="w-fit" />
                <div class="flex flex-col gap-0">
                    <h1 class="font-bold text-xs text-black/25">About</h1>
                    <p class="font-bold text-xl text-black/25 text-justify">
                        An <span class="text-black"
                            >online furniture shop</span
                        > that lets customers explore curated collections, customize product details, compare designs, place orders seamlessly, all in one modern, easy-to-use shopping experience.
                    </p>
                </div>
                <div class="flex gap-9">
                    <div class="flex flex-col gap-0">
                        <h1 class="font-bold text-xs text-black/25">Year</h1>
                        <p class="font-bold text-xl text-black text-justify">
                            2025
                        </p>
                    </div>
                    <div class="flex flex-col gap-0">
                        <h1 class="font-bold text-xs text-black/25">Client</h1>
                        <p class="font-bold text-xl text-black text-justify">
                            -
                        </p>
                    </div>
                </div>
                <div class="flex flex-col gap-0">
                    <h1 class="font-bold text-xs text-black/25">Role</h1>
                    <p class="font-bold text-xl text-black text-justify">
                        Web Developer
                    </p>
                </div>
                <div class="flex flex-col gap-0">
                    <h1 class="font-bold text-xs text-black/25">Link</h1>
                    <a
                        href="https://tigafurnitur.biz.id"
                        class="font-bold text-xl text-brand-orange underline"
                        >https://tigafurnitur.biz.id</a
                    >
                </div>
            </article>
        </section>

